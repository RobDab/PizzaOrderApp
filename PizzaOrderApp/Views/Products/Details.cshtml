@model PizzaOrderApp.Models.Products

@{
    ViewBag.Title = "Details";
}


<div class="row flex-column flex-sm-row"s>
    <div class="col-7  col-lg-4 m-lg-5" style="object-fit: contain;">
        @* img div*@
        <img src="~/Content/Assets/@Model.URLImg" class="w-100"  />
    </div>
    <div class="col-4 d-flex flex-column ms-5 ms-sm-1">
        @* detail div*@
        <h2 class="mt-3 fs-1">@Model.Name</h2>
        <p class="fs-4">Preparazione: @Model.DeliveryTime.ToString() min</p>
        <h4>Ingredienti</h4>
        <p class="fs-5">@Model.Ingredients</p>
        <h4>@Model.Price.ToString("C")</h4>
        <div>
            <label for="quantity">Quantità </label>
            <input id="quantityInput" type="number" value="Quantità" name="quantity" style="width:50px; margin-left: 1em;" placeholder="1" />
        </div>

    </div>
</div>
<div class="align-content-center mt-4">
    @Html.ActionLink("Aggiungi all'ordine", "AddToOrder", "Orders", new { ProductID = Model.ProductID }, new { @class = "btn btn-warning mt-3 w-100 text-dark fs-4 fw-bolder" })
    <p class="mt-3"><i class="fa-solid fa-arrow-left"></i>@Html.ActionLink("Tona alla selezione", "Index", "Products", null, new { @class = "btn btn-default pt-0 fs-5 text-light" })</p>
</div>




