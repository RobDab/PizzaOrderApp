@model IEnumerable<PizzaOrderApp.Models.Products>

@{
    ViewBag.Title = "Index";
}




@if (ViewBag.ErrMsg != null)
{
    <p>Che pizza, c'è un piccolo errore. Riprova per favore :)</p>
}


<h2 style="text-align: center; margin-block: 2em; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">Ciao <span style="font-weight: 600;">@User.Identity.Name</span>, voglia di pizza?</h2>

<div class="d-flex gap-2 flex-wrap justify-content-between px-2 mx-2">
    @foreach (var item in Model)
    {


        <div class="card border-0 text-dark bg-opacity-10 pizzaCard" style="max-width: 200px;">

            <img src="~/Content/Assets/@item.URLImg" class="card-img-top" alt="pizza image">
            <div class="card-body text-center text-light">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text pt-2" style="min-height: 60px;">@item.Ingredients</p>
                <p class="card-text fw-bold fs-5
                   text-success">@item.Price.ToString("C")</p>
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn pizzaCardBtn" })
            </div>
        </div>


    }
</div>

