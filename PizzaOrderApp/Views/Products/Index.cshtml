@model IEnumerable<PizzaOrderApp.Models.Products>

@{
    ViewBag.Title = "Index";
}




@if (ViewBag.ErrMsg != null)
{
    <p>Che pizza, c'è un piccolo errore. Riprova per favore :)</p>
}


<h2 style="text-align: center; margin-block: 2em; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">Ciao <span style="font-weight: 600;">@User.Identity.Name</span>, voglia di pizza?</h2>

<div class="d-flex gap-1">
    @foreach (var item in Model)
    {


        <div class="card border-0" style="width: 18rem;">

            <img src="~/Content/Assets/@item.URLImg" class="card-img-top" alt="pizza image">
            <div class="card-body text-center">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Ingredients</p>
                <p class="card-text">@item.Price.ToString("C")</p>
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-success" })
            </div>
        </div>


    }
</div>
